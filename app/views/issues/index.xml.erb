<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
  <channel>
    <title>Vim Weekly</title>
    <link>http://www.vimweekly.com/</link>
    <description>5 vim tips every Mondays</description>
    <% @issues.each do |val| %>
      <item>
        <title><%= val.summary %></title>
        <pubDate><%= val['release_date'] %></pubDate>
        <description>
          &lt;p&gt;&lt;code&gt;<%= val.code %>&lt;/code&gt;&lt;/p&gt;
          &lt;p&gt;<%= val.description %>&lt;/p&gt;
        </description>
      </item>
    <% end %>
  </channel>
</rss>
